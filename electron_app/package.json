{
  "name": "project-eve",
  "version": "1.0.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder --win portable"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.yourcompany.projecteve",
    "productName": "ProjectEve",
    "files": [
      "main.js",
      "package.json",
      "icons/**/*"
    ],
    "extraResources": [
      {
        "from": "servers/",
        "to": "servers",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "servers/**/*.exe"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icons/app.ico"
    },
    "portable": {
      "artifactName": "ProjectEve-Portable-${version}.exe"
    }
  }
}
