{
  "name": "project-eve",
  "version": "1.1.1",
  "description": "Project Eve - Life quality terminal",
  "author": "Mabylife",
  "license": "MIT",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build": "electron-builder --win portable",
    "build:dir": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "active-win": "^7.7.2",
    "cheerio": "^1.1.2",
    "express": "^5.1.0",
    "mathjs": "^14.6.0",
    "mica-electron": "1.5.16",
    "systeminformation": "^5.27.7"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "electron": "30.5.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourcompany.projecteve",
    "productName": "ProjectEve",
    "files": [
      "main.js",
      "package.json",
      "index.html",
      "mediaCard.html",
      "component.css",
      "main.css",
      "mediaFetch.js",
      "script.js",
      "icons/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "servers/",
        "to": "servers",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icons/app.ico"
    },
    "portable": {
      "artifactName": "ProjectEve-Portable-${version}.exe"
    }
  },
  "engines": {
    "node": ">=18.17"
  }
}
