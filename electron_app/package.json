{
  "name": "project-eve",
  "version": "1.2.0",
  "description": "Project Eve - Life quality terminal",
  "author": "Mabylife",
  "license": "MIT",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "electron . --no-sandbox --disable-dev-shm-usage",
    "start": "electron . --no-sandbox --disable-dev-shm-usage",
    "build": "electron-builder --win portable"
  },
  "dependencies": {
    "child-process": "^1.0.2",
    "chokidar": "^4.0.3",
    "fs": "^0.0.1-security",
    "mica-electron": "^1.5.16",
    "promises": "^0.2.5",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.mabylife.projecteve",
    "productName": "ProjectEve",
    "files": [
      "**/*"
    ],
    "asar": false,
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icons/app.ico"
    },
    "portable": {
      "artifactName": "ProjectEve-Portable-${version}.exe"
    }
  },
  "engines": {
    "node": ">=22.18.0"
  }
}
