{
  "name": "project-eve",
  "version": "1.2.0",
  "description": "Project Eve - Life quality terminal",
  "author": "Mabylife",
  "license": "MIT",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build": "electron-builder --win portable"
  },
  "dependencies": {
    "active-win": "^8.2.1",
    "cheerio": "^1.1.2",
    "express": "^5.1.0",
    "mathjs": "^14.6.0",
    "mica-electron": "^1.5.16",
    "systeminformation": "^5.27.7"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.yourcompany.projecteve",
    "productName": "ProjectEve",
    "files": [
      "main.js",
      "package.json",
      "index.html",
      "mediaCard.html",
      "component.css",
      "main.css",
      "mediaFetch.js",
      "script.js",
      "icons/**/*",
      "assets/**/*",
      "servers/"
    ],
    "extraResources": [],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icons/app.ico"
    },
    "portable": {
      "artifactName": "ProjectEve-Portable-${version}.exe"
    }
  },
  "engines": {
    "node": ">=22.18.0"
  }
}
