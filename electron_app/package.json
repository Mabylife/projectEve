{
  "name": "project-eve",
  "version": "2.0.0",
  "description": "Project Eve - A life quality desktop terminal",
  "productName": "ProjectEve",
  "appId": "com.mabylife.projecteve",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": "electron-builder --win nsis",
    "build:nsis": "electron-builder --win nsis",
    "build:dir": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "child-process": "^1.0.2",
    "chokidar": "^4.0.3",
    "fs": "^0.0.1-security",
    "mica-electron": "^1.5.16",
    "promises": "^0.2.5",
    "ws": "^8.18.3",
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron/rebuild": "^4.0.1",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "asar": true,
    "directories": {
      "output": "dist",
      "buildResources": "icons"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "configManager.js",
      "scaleManager.js",
      "dataHub.js",
      "pages/**/*",
      "icons/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "../EveServer.exe",
        "to": "bin/EveServer.exe"
      }
    ],
    "win": {
      "icon": "icons/app.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ProjectEve",
      "artifactName": "ProjectEve-Setup-${version}.exe"
    }
  }
}