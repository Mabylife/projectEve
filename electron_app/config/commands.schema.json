{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project Eve Commands Schema (simple v2)",
  "type": "object",
  "required": ["version", "commands"],
  "properties": {
    "version": { "type": "integer", "enum": [2] },
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "prefix", "cmds", "action"],
        "properties": {
          "id": { "type": "string", "pattern": "^[a-zA-Z0-9_.-]+$" },
          "enabled": { "type": "boolean", "default": true },
          "name": { "type": "string" },
          "prefix": { "type": "string", "minLength": 1 },
          "cmds": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 },
            "uniqueItems": true
          },
          "action": {
            "type": "object",
            "oneOf": [
              {
                "title": "Built-in function",
                "type": "object",
                "required": ["type", "name"],
                "properties": {
                  "type": { "const": "function" },
                  "name": {
                    "type": "string",
                    "enum": [
                      "power_silent",
                      "power_balanced",
                      "power_turbo",
                      "media_toggle",
                      "media_next",
                      "media_prev",
                      "media_stop",
                      "toggle_immersive",
                      "open_bin",
                      "clean_bin",
                      "autofocus_on",
                      "autofocus_off",
                      "clear_output",
                      "clear_output_full",
                      "quote_copy",
                      "quote_change",
                      "reconnect"
                    ]
                  }
                },
                "additionalProperties": false
              },
              {
                "title": "Send virtual keys",
                "type": "object",
                "required": ["type", "keys"],
                "properties": {
                  "type": { "const": "send_vk" },
                  "keys": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                      "anyOf": [
                        { "type": "integer" },
                        { "type": "string", "pattern": "^0x[0-9A-Fa-f]+$" }
                      ]
                    }
                  },
                  "mode": { "type": "string", "enum": ["combo", "sequence"], "default": "combo" },
                  "inter_key_delay_ms": { "type": "integer", "minimum": 0, "default": 0 },
                  "hold_ms": { "type": "integer", "minimum": 0, "default": 50 }
                },
                "additionalProperties": false
              },
              {
                "title": "Open shortcut",
                "type": "object",
                "required": ["type", "name"],
                "properties": {
                  "type": { "const": "open_shortcut" },
                  "name": { "type": "string", "minLength": 1 }
                },
                "additionalProperties": false
              },
              {
                "title": "Open URL",
                "type": "object",
                "required": ["type", "url"],
                "properties": {
                  "type": { "const": "open_url" },
                  "url": { "type": "string", "minLength": 1 }
                },
                "additionalProperties": false
              }
            ]
          },
          "output_ok": {
            "oneOf": [
              { "type": "string" },
              { "type": "array", "items": { "type": "string" }, "minItems": 1 }
            ]
          },
          "output_fail": {
            "oneOf": [
              { "type": "string" },
              { "type": "array", "items": { "type": "string" }, "minItems": 1 }
            ]
          },
          "help": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}